@model TeamMember

    <div class="col-sm-4">
        <div class="team-member">
            <img class="mx-auto rounded-circle member-image" src="@Url.Content(Model.ImageUrl)" alt="">
            <h4>@Model.Name</h4>
            <p class="text-muted">@Model.Position</p>
            <ul class="list-inline social-buttons">
                <li class="list-inline-item">
                    <a href="@Model.TwitterLink">
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="@Model.FacebookLink">
                        <i class="fa fa-facebook"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="@Model.LinkedinLink">
                        <i class="fa fa-linkedin"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div> 