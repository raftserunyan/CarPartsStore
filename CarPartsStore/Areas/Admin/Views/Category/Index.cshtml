@model IEnumerable<Category>
@*Category*@

@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<html>
<head>
    <title>Categories</title>
    <link href="~/libTemp/css/agency.min.css" rel="stylesheet">
</head>
<body style="margin-bottom: 0;">
    <!-- Main Body -->
    <section id="portfolio" style="background-color: #f2f3f4;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Categories</h2>
                </div>
            </div>

            <div class="container mb-4" style="height: 4rem; border: 1px solid #fed136; border-radius: 1em; background-color: #fff;">
                <a class="portfolio-link" style="text-decoration: none;" asp-area="Admin" asp-controller="Category" asp-action="Add">
                    <div style="width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                        <i class="fa fa-plus fa-3x text-primary"></i>
                    </div>
                </a>
            </div>

            <div class="row">
                @foreach (Category category in Model)
                {
                    @Html.Partial("_CategoryCardPartialView", category);
                }
            </div>
        </div>
    </section>
</body>
</html>