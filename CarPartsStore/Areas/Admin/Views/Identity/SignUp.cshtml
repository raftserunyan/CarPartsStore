@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model CarPartsStore.ViewModels.SignUpViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["Sign Up - CarPartsStore"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="~/libTemp/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/libTemp/css/agency.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body style="background-image: url(https://img5.goodfon.com/wallpaper/nbig/c/6b/listia-kust-kusty-fon-rastenie.jpg); background-repeat: repeat; background-size: cover;">

    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-dark" style="padding: 0.2em 0 0.2em 0;" id="mainNav">
        <div class="container-fluid">
            <a class="navbar-brand js-scroll-trigger ml-5" asp-controller="Home" asp-action="Index">Car Parts Store</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                @Localizer["Menu"]
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Index" asp-area="">@Localizer["PRODUCTS"]</a>
                    </li>
                    <li class="nav-item ml-5 text-capitalize" style="display: flex; align-items: center;">
                        <a class="nav-link js-scroll-trigger btn btn-primary" style="line-height: 0.5em; color: #fff;" asp-controller="Identity" asp-action="Login" asp-area="">@Localizer["Log In"]</a>
                    </li>
                    <li class="nav-item mr-4">
                        <a class="nav-link js-scroll-trigger text-capitalize" style="text-decoration: none;" asp-controller="Identity" asp-action="SignUp" asp-area="">@Localizer["Sign Up"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="col-sm-6 offset-sm-3" style="position: absolute; top: 50%; transform: translateY(-50%); background-color: rgba(0,0,0,.73); border-radius: 0.5rem; margin-top: 3.3rem;">
        <div class="col-sm-12" style="margin-bottom: 6rem; display: flex; flex-direction: column; align-items: center; justify-content: center;">
            <div style="position: absolute; left: 50%; top: 0; transform: translate(-50%, -50%); background-color: #bdc5c7; width: 8rem; height: 8rem; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                <i class="fa fa-user fa-5x text-dark"></i>
            </div>
        </div>

        <div class="col-sm-10 offset-sm-1">
            <form asp-action="SignUp" asp-controller="Identity" asp-area="Admin" method="post" style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin-bottom: 2rem;">
                <div class="form-group" style="width: 100%; margin: 0; margin-bottom: 1em;">
                    <input type="text" asp-for="Name" class="form-control" placeholder="@Localizer["Name"]" style="width: 100%; margin: 0; line-height: 2em; font-size: 1.5em;" value="@Model.Name">
                    <div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" style="width: 100%; margin: 0; margin-bottom: 1em;">
                    <input type="text" asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" style="width: 100%; margin: 0; line-height: 2em; font-size: 1.5em;" value="@Model.Email">
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("UserAlreadyExists")</span>
                        <span class="text-danger">@Html.ValidationMessage("PendingRequest")</span>
                    </div>
                </div>
                <div class="form-group" style="width: 100%; margin: 0; margin-bottom: 1em;">
                    <input type="password" asp-for="Password" class="form-control" placeholder="@Localizer["Password"]" style="width: 100%; margin: 0; line-height: 2em; font-size: 1.5em;" value="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="text-danger">@Html.ValidationMessage("PasswordError")</span>
                </div>
                <div class="form-group" style="width: 100%; margin: 0; margin-bottom: 1em;">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["Confirm Password"]" style="width: 100%; margin: 0; line-height: 2em; font-size: 1.5em;" value="@Model.ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center" style="width: 100%; margin-bottom: 1em;">
                    <input type="submit" class="btn btn-primary btn-xl text-uppercase" style="cursor:  pointer;" value="@Localizer["Sign Up"]">
                    <a class="btn btn-secondary btn-xl text-uppercase" asp-action="Index" asp-controller="Home" asp-area="">Home <i class="fa fa-home"></i></a>
                </div>
                <div class="form-group text-center" style="width: 100%; margin: 0; color: #999;">
                    @Localizer["Already have an account?"]
                    <a asp-action="Login" asp-controller="Identity" asp-area="" style="text-decoration: none;" class="text-primary">@Localizer["Sign In"]</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>