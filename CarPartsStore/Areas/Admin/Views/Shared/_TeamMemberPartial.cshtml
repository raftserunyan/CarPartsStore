@model TeamMember

    <div class="col-sm-4">
        <div class="team-member" id="portfolio">
            <div class="portfolio-item">
                <a class="portfolio-link" data-toggle="modal" href="#Edit_TeamMember_@Model.Id">
                    <div class="portfolio-hover" style="border-radius: 50%;">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-pencil fa-3x"></i>
                        </div>
                    </div>
                    <img class="rounded-circle member-image" src="@Url.Content(Model.ImageUrl)" alt="">
                </a>
            </div>

            <h4>@Model.Name</h4>
            <p class="text-muted">@Model.Position</p>
            <ul class="list-inline social-buttons">
                <li class="list-inline-item">
                    <a href="@Model.TwitterLink" target="_blank">
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="@Model.FacebookLink" target="_blank">
                        <i class="fa fa-facebook"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="@Model.LinkedinLink" target="_blank">
                        <i class="fa fa-linkedin"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div> 