@model TeamMember

<div class="portfolio-modal modal fade" id="Add_TeamMember" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="margin: 2rem 14rem 2rem 14rem;">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl"></div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <div class="modal-body">

                            <h2 class="text-uppercase mb-3">Add Team Member</h2>

                            <form asp-area="Admin" asp-controller="TeamMember" asp-action="Add" method="post" asp-antiforgery="true">
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input asp-for="Name" class="form-control" type="text" value="" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageUrl">Image Url</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input asp-for="ImageUrl" class="form-control" type="text" value="" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Position">Position</label>
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                    <input asp-for="Position" class="form-control" type="text" value=""/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FacebookLink">FacebookLink</label>
                                    <span asp-validation-for="FacebookLink" class="text-danger"></span>
                                    <input asp-for="FacebookLink" class="form-control" type="text" value=""/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TwitterLink">TwitterLink</label>
                                    <span asp-validation-for="TwitterLink" class="text-danger"></span>
                                    <input asp-for="TwitterLink" class="form-control" type="text" value=""/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LinkedinLink">LinkedinLink</label>
                                    <span asp-validation-for="LinkedinLink" class="text-danger"></span>
                                    <input asp-for="LinkedinLink" class="form-control" type="text" value="" />
                                </div>
                                <button class="btn btn-primary btn-xl text-uppercase" type="submit">Save Changes</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>