@model Product

<div class="portfolio-modal modal fade" id="Edit_@Model.ProductID" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="margin: 2rem 14rem 2rem 14rem;">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl"></div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <div class="modal-body">

                            <h2 class="text-uppercase mb-3">Edit Product</h2>

                            <form asp-area="Admin" asp-controller="Product" asp-action="Edit" method="post" asp-antiforgery="true">
                                <div class="form-group">
                                    <input asp-for="ProductID" class="form-control" type="text" value="@Model.ProductID" hidden="hidden" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input asp-for="Name" class="form-control" type="text" value="@Model.Name" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageUrl">Image Url</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    @if (Model.ImageUrl == "~/img/noimage.png")
                                    {
                                        <input asp-for="ImageUrl" class="form-control" type="text" value="" />
                                    }
                                    else
                                    {
                                        <input asp-for="ImageUrl" class="form-control" type="text" value="@Model.ImageUrl" />
                                    }
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Description</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    @if (Model.Description == "No Description...")
                                    {
                                        <input asp-for="Description" class="form-control" type="text" value="" />
                                    }
                                    else
                                    {
                                        <input asp-for="Description" class="form-control" type="text" value="@Model.Description" />
                                    }
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price">Price</label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                    <input asp-for="Price" class="form-control" type="text" value="@Model.Price" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="CategoryId">Price</label>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    <select asp-for="CategoryId" asp-items="@((SelectList)ViewBag.CategorySelect)" class="form-control">
                                        <option value="0" selected>Select The Category</option>
                                    </select>
                                </div>
                                <button class="btn btn-primary btn-xl text-uppercase" type="submit">Save Changes</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>