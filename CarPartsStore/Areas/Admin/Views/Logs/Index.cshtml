@model string[][]
@*Logs*@

@{
    ViewData["Title"] = "Logs";
    Layout = "_Layout";
}

<html>
<head>
    <title>Logs</title>
    <link href="~/libTemp/css/agency.min.css" rel="stylesheet">
</head>
<body style="margin-bottom: 0; background-color: #f2f3f4;">
    <!-- Main Body -->
    <section class="ml-4 mr-4" style="color: rgba(0,0,0,.8); font-family: sans-serif;">
        <div class="container mb-3" style="display: flex; align-items: center; justify-content: center;">
            <a class="btn btn-danger btn-xl" asp-action="ClearLogs" asp-controller="Logs" asp-area="Admin">
                Clear Logs <i class="fa fa-trash"></i>
            </a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-light">
                <tr>
                    <th style="width: 1em;">Date</th>
                    <th style="width: 1em;">Id</th>
                    <th style="width: 1em;">Level</th>
                    <th style="width: 1em;">Logger</th>
                    <th style="width: 1em;">Message</th>
                    <th style="width: 1em;">Url</th>
                    <th style="width: 1em;">Action</th>
                </tr>
            </thead>
            <tbody style="background-color: rgba(80,80,80,.1)" class="text-dark">
                @for (int i = 0; i < Model.GetLength(0); i++)
                {
                    <tr>
                        @for (int j = 0; j < 7; j++)
                        {
                            <td style="width: 2rem; word-break: break-all;">@Model[i][j]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </section>
</body>
</html>